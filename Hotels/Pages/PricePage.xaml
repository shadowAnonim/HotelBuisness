<Page x:Class="Hotels.Pages.PricePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotels.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Прайс-лист" Loaded="Page_Loaded">

    <Grid>
        <DataGrid x:Name="hotelsDg" Grid.Row="1" Grid.ColumnSpan="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Отель" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Отель" Binding="{Binding StandartPrice}"/>
                <DataGridTextColumn Header="Отель" Binding="{Binding LuxPrice}"/>
                <DataGridTextColumn Header="Отель" Binding="{Binding ApartmentPrice}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
